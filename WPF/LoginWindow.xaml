<Window x:Class="WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Login" Height="366" Width="296">
    <Grid Background="#FF332B2B" HorizontalAlignment="Center" VerticalAlignment="Center" Height="366" Width="306">
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="EmailTextBlock" TextWrapping="Wrap" Margin="37,102,199,18" Foreground="White" Height="22" Width="60"><Run Language="pl-pl" Text="Email:"/><LineBreak/><Run Language="pl-pl"/></TextBlock>
        <TextBlock x:Name="PasswordTextBlock" TextWrapping="Wrap" Margin="37,123,199,211" Foreground="White" Width="60" Height="22" Grid.RowSpan="2"><Run Language="pl-pl" Text="Password:"/><LineBreak/><Run Language="pl-pl"/></TextBlock>
        <TextBox x:Name="EmailInput" TextWrapping="Wrap" Margin="102,98,39,24" Height="20" Width="155"/>
        <PasswordBox x:Name="PasswordInput" Margin="102,123,39,211" Width="155" Height="22" Grid.RowSpan="2"/>
        <Button x:Name="LoginButton" Content="Login" Margin="131,133,131,59" Width="34" Height="22" Grid.Row="1" Click="LoginButton_Click"/>
        <TextBlock x:Name="LoginTextBox" TextWrapping="Wrap" Margin="0,61,0,0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Width="30" Height="16"><Run Language="pl-pl" Text="Login"/></TextBlock>
    </Grid>
</Window>
